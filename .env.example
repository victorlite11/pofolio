SMTP_HOST=smtp.gmail.com
# Use 587 (STARTTLS) or 465 (SMTPS)
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-smtp-password-or-app-password
SMTP_FROM="Your Name <you@example.com>"

# Where to send contact messages
CONTACT_RECEIVER=you@example.com

# Optional
PORT=4000
SMTP_TIMEOUT_MS=120000
SMTP_MAX_ATTEMPTS=3
MAX_ATTACHMENT_SIZE=5242880
ALLOWED_MIME_TYPES=image/png,image/jpeg,image/webp,application/pdf
ASYNC_EMAIL=true